<Page x:Class="UP01_Quiz_Luzin.Pages.QuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP01_Quiz_Luzin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuizPage">

    <Grid Background="#c2fffb">
        <Canvas x:Name="MainCanvas" ClipToBounds="True">
            <!-- Первая StackPanel -->
            <StackPanel x:Name="FirstPanel" Orientation="Vertical" Width="300" Height="300" Background="LightGray">
                
                <TextBlock Text="Вопрос 1 из 4" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="Что такое IDE" FontSize="20" Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <RadioButton x:Name="FirstRadioButton1" Margin="40,10,0,0" Content="Вариант" HorizontalAlignment="Left"/>
                <RadioButton x:Name="SecondRadioButton1" Margin="40,10,0,0" Content="Вариант" HorizontalAlignment="Left"/>
                <RadioButton x:Name="ThirdRadioButton1" Margin="40,10,0,0" Content="Вариант" HorizontalAlignment="Left"/>
            </StackPanel>

            <!-- Вторая StackPanel -->
            <StackPanel x:Name="SecondPanel" Orientation="Vertical" Width="300" Height="300" Background="White" Visibility="Collapsed">
                <StackPanel.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Text="Вопрос 2 из 4" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="Представьтесь" FontSize="20" Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="ФИО:" FontSize="16" Margin="-150,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <RadioButton x:Name="FirstRadioButton2" Content="Вариант" HorizontalAlignment="Center"/>
                <RadioButton x:Name="SecondRadioButton2" Content="Вариант" HorizontalAlignment="Center"/>
                <RadioButton x:Name="ThirdRadioButton2" Content="Вариант" HorizontalAlignment="Center"/>

                <TextBlock Text="Номер группы:" FontSize="16" Margin="-80,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Третья StackPanel -->
            <StackPanel x:Name="ThirdPanel" Orientation="Vertical" Width="300" Height="300" Background="LightGreen" Visibility="Collapsed">
                <TextBlock Text="Панель 2" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Четвертая StackPanel -->
            <StackPanel x:Name="FourthPanel" Orientation="Vertical" Width="300" Height="300" Background="LightGreen" Visibility="Collapsed">
                <TextBlock Text="Панель 2" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>

            <Button x:Name="AniButton" Content="Дальше" Canvas.Left="359" Canvas.Top="355" Style="{StaticResource ButtonsForMenu}" Click="AniButton_Click" Height="37" Width="82">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Canvas>
    </Grid>
</Page>
